{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["node", "webpack-env"],
    "paths": {
      "@/*": ["/*"],
      "@": [
        "/index.js",
        "/index.json",
        "/index.tsx",
        "/index.ts",
        "/index.scss",
        "/index.css"
      ],
      "@pages/*": ["pages/*"],
      "@pages": [
        "pages/index.js",
        "pages/index.json",
        "pages/index.tsx",
        "pages/index.ts",
        "pages/index.scss",
        "pages/index.css"
      ],
      "@i18n/*": ["i18n/*"],
      "@i18n": [
        "i18n/index.js",
        "i18n/index.json",
        "i18n/index.tsx",
        "i18n/index.ts",
        "i18n/index.scss",
        "i18n/index.css"
      ],
      "@services/*": ["services/*"],
      "@api/*": ["services/api/*"],
      "@api": [
        "services/API/index.js",
        "services/API/index.json",
        "services/API/index.tsx",
        "services/API/index.ts",
        "services/API/index.scss",
        "services/API/index.css"
      ],
      "@layouts/*": ["layouts/*"],
      "@layouts": [
        "layouts/index.js",
        "layouts/index.json",
        "layouts/index.tsx",
        "layouts/index.ts",
        "layouts/index.scss",
        "layouts/index.css"
      ],
      "@components/*": ["components/*"],
      "@components": [
        "components/index.js",
        "components/index.json",
        "components/index.tsx",
        "components/index.ts",
        "components/index.scss",
        "components/index.css"
      ],
      "@modules/*": ["components/*"],
      "@modules": [
        "components/index.js",
        "components/index.json",
        "components/index.tsx",
        "components/index.ts",
        "components/index.scss",
        "components/index.css"
      ],
      "@assets/*": ["assets/*"],
      "@assets": [
        "assets/index.js",
        "assets/index.json",
        "assets/index.tsx",
        "assets/index.ts",
        "assets/index.scss",
        "assets/index.css"
      ],
      "@utils/*": ["utilities/*"],
      "@utils": [
        "utilities/index.js",
        "utilities/index.json",
        "utilities/index.tsx",
        "utilities/index.ts",
        "utilities/index.scss",
        "utilities/index.css"
      ],
      "@interfaces/*": ["interfaces/*"],
      "@interfaces": [
        "interfaces/index.js",
        "interfaces/index.json",
        "interfaces/index.tsx",
        "interfaces/index.ts",
        "interfaces/index.scss",
        "interfaces/index.css"
      ],
      "@media/*": ["media/*"],
      "@media": [
        "media/index.js",
        "media/index.json",
        "media/index.tsx",
        "media/index.ts",
        "media/index.scss",
        "media/index.css"
      ],
      "@styles/*": ["styles/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "tailwind.config.js", "postcss.config.js", "src/pages/[language]/[state]/[...slug]/index.js", "server.js", "src/pages/[state]/[...slug]/index.tsx"],
  "exclude": ["node_modules"]
}
