{
  "baseUrl": ".",
  "include": ["src/**/*", "tests/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "es6",
    "paths": {
      "@/*": ["src/*"],
      "@": [
        "src/index.js",
        "src/index.json",
        "src/index.tsx",
        "src/index.ts",
        "src/index.scss",
        "src/index.css"
      ],
      "@pages/*": ["pages/*"],
      "@pages": [
        "pages/index.js",
        "pages/index.json",
        "pages/index.tsx",
        "pages/index.ts",
        "pages/index.scss",
        "pages/index.css"
      ],
      "@config/*": ["src/configurations/*"],
      "@config": [
        "src/configurations/index.js",
        "src/configurations/index.json",
        "src/configurations/index.tsx",
        "src/configurations/index.ts",
        "src/configurations/index.scss",
        "src/configurations/index.css"
      ],
      "@lang/*": ["src/lang/*"],
      "@lang": [
        "src/lang/index.js",
        "src/lang/index.json",
        "src/lang/index.tsx",
        "src/lang/index.ts",
        "src/lang/index.scss",
        "src/lang/index.css"
      ],
      "@api/*": ["src/api/*"],
      "@api": [
        "src/api/index.js",
        "src/api/index.json",
        "src/api/index.tsx",
        "src/api/index.ts",
        "src/api/index.scss",
        "src/api/index.css"
      ],
      "@layouts/*": ["src/layouts/*"],
      "@layouts": [
        "src/layouts/index.js",
        "src/layouts/index.json",
        "src/layouts/index.tsx",
        "src/layouts/index.ts",
        "src/layouts/index.scss",
        "src/layouts/index.css"
      ],
      "@components/*": ["src/components/*"],
      "@components": [
        "src/components/index.js",
        "src/components/index.json",
        "src/components/index.tsx",
        "src/components/index.ts",
        "src/components/index.scss",
        "src/components/index.css"
      ],
      "@assets/*": ["src/assets/*"],
      "@assets": [
        "src/assets/index.js",
        "src/assets/index.json",
        "src/assets/index.tsx",
        "src/assets/index.ts",
        "src/assets/index.scss",
        "src/assets/index.css"
      ],
      "@utils/*": ["src/utils/*"],
      "@utils": [
        "src/utils/index.js",
        "src/utils/index.json",
        "src/utils/index.tsx",
        "src/utils/index.ts",
        "src/utils/index.scss",
        "src/utils/index.css"
      ]
    }
  },
  "exclude": ["node_modules", "target", "build", "public"]
}
